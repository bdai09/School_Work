<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.a3tszkanwong.MainActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34b8f6"
    android:orientation="vertical">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#AA66CC"
      android:gravity="center"
      android:text="Hello Toronto"
      android:textColor="#ffffff"
      android:textSize="30dp" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/button_add_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD TEAM"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="EXIT"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

    </LinearLayout>

    <ListView
      android:id="@+id/androidlist"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:dividerHeight="1dp"/>
  </LinearLayout>
</android.support.constraint.ConstraintLayout>